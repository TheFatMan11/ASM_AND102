<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    >
    <ImageView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32dp"
        android:text="Đăng Nhập"
        android:textStyle="bold"
        android:textColor="#0099BA"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên tài khoản"
            android:textStyle="bold"
            android:textColor="#1B9FBC"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="10dp"
            android:id="@+id/edt_tentaikhoan_dangnhap"
            android:background="@drawable/shape_bo_edt"
           />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu"
            android:textStyle="bold"
            android:textColor="#1B9FBC"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:paddingLeft="10dp"
            android:inputType="textPassword"
            android:id="@+id/edt_matkhau_dangnhap"
            android:background="@drawable/shape_bo_edt"
          />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cbo_luudangnhap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="Lưu đăng nhập"
            android:layout_weight="1"
            android:textColor="#0590AE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Quên mật khẩu ?"
            android:id="@+id/tv_quenmatkhau"
            android:textColor="#D161ED"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Đăng nhập"
        android:background="@drawable/shape_btn"
        android:id="@+id/btn_dangnhap"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản ? "
            android:textColor="#70ADE6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:id="@+id/tv_dangky"
            android:textColor="#C669F2"/>

    </LinearLayout>


</LinearLayout>